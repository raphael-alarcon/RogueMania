{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@game/*": ["src/game/*"],
      "@gameobjects/*": ["src/game/gameobjects/*"],
      "@entities/*": ["src/game/gameobjects/entities/*"],
      "@gamelogic/*": ["src/game/gamelogic/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["src/utils/*"],
    }
  },
  "include": ["src"]
}
