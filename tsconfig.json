{
  "compilerOptions": {
    /* Decorators */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": false,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@game/*": ["src/game/*"],
      "@gameobjects/*": ["src/game/gameobjects/*"],
      "@entities/*": ["src/game/gameobjects/entities/*"],
      "@map/*": ["src/game/map/*"],
      "@gamelogic/*": ["src/game/gamelogic/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/game/config/*"],
      "@graphics/*": ["src/game/config/graphics/*"],
      "@services/*": ["src/game/services/*"],
    }
  },
  "include": ["src"]
}
